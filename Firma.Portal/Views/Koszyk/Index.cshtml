@model List<Firma.Portal.ViewModel.PozycjaKoszykaVM>
@{
    ViewData["Title"] = "Twój koszyk";
}

<h1>Twój koszyk</h1>

@if (!Model.Any())
{
    <p>Twój koszyk jest pusty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Towar</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th>Suma</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.TowarNazwa</td>
                    <td>@p.CenaJednostkowa.ToString("C")</td>
                    <td>@p.Ilosc</td>
                    <td>@(p.CenaJednostkowa * p.Ilosc).ToString("C")</td>
                    <td>
                        <form method="post" asp-action="Usun">
                            <input type="hidden" name="towarId" value="@p.TowarId" />
                            <button class="btn btn-danger btn-sm">Usuń</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Suma:</th>
                <th>
                    @Model.Sum(p => p.CenaJednostkowa * p.Ilosc).ToString("C")
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>

    <a asp-controller="Zamowienie" asp-action="Create" class="btn btn-primary">Przejdź do zamówienia</a>
}
