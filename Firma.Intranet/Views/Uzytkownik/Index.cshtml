@model IEnumerable<Firma.Data.Data.Sklep.Uzytkownik>
@{
    ViewData["Title"] = "Użytkownicy";
}

<h1 class="mb-4">Lista użytkowników</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj nowego użytkownika
</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Imie</td>
                <td>@item.Nazwisko</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UzytkownikId" class="btn btn-olive btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Edytuj
                    </a>
                    <a asp-action="Details" asp-route-id="@item.UzytkownikId" class="btn btn-slate btn-sm me-1">
                        <i class="bi bi-info-circle"></i> Szczegóły
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.UzytkownikId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                            onclick="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">
                            <i class="bi bi-trash"></i> Usuń
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
