@model IEnumerable<Firma.Data.Data.Sklep.Zamowienie>
@{
    ViewData["Title"] = "Zamówienia";
}

<h1 class="mb-4">Lista zamówień</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj nowe zamówienie
</a>


<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Data zamówienia</th>
            <th>Suma</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataZamowienia.ToShortDateString()</td>
                <td>@item.Suma.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdZamowienia" class="btn btn-slate btn-sm me-1">
                        <i class="bi bi-info-circle"></i> Szczegóły
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdZamowienia" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
