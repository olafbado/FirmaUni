@model IEnumerable<Firma.Data.Data.Sklep.Zamowienie>
@{
    ViewData["Title"] = "Zamówienia";
}

<h1 class="mb-4">Lista zamówień</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj nowe zamówienie
</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Data</th>
            <th>Użytkownik</th>
            <th>Adres</th>
            <th>Metoda płatności</th>
            <th>Suma</th>
            <th>Koszyk ID</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataZamowienia.ToString("g")</td>
                <td>@item.Uzytkownik.Imie @item.Uzytkownik.Nazwisko</td>
                <td>@item.Adres</td>
                <td>@item.MetodaPlatnosci</td>
                <td>@item.Suma.ToString("C")</td>
                <td>@item.KoszykId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdZamowienia" class="btn btn-sm btn-olive">
                        <i class="bi bi-pencil-square"></i> Edytuj
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdZamowienia" class="btn btn-sm btn-slate">
                        <i class="bi bi-info-circle"></i> Szczegóły
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.IdZamowienia" method="post" class="d-inline" onsubmit="return confirm('Na pewno chcesz usunąć?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Usuń
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
