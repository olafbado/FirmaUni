@model Firma.Data.Data.Sklep.Zamowienie
@{
    ViewData["Title"] = "Szczegóły zamówienia";
}

<h1 class="mb-4">Szczegóły zamówienia</h1>

<div class="mb-3"><strong>Data:</strong> @Model.DataZamowienia.ToString("g")</div>
<div class="mb-3"><strong>Użytkownik:</strong> @Model.Uzytkownik.Imie @Model.Uzytkownik.Nazwisko</div>
<div class="mb-3"><strong>Adres:</strong> @Model.Adres</div>
<div class="mb-3"><strong>Metoda płatności:</strong> @Model.MetodaPlatnosci</div>
<div class="mb-3"><strong>Suma:</strong> @Model.Suma.ToString("C")</div>
<div class="mb-3"><strong>Koszyk ID:</strong> @Model.KoszykId</div>

<a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Wróć do listy</a>
