@model IEnumerable<Firma.Data.Data.Sklep.PozycjaKoszyka>
@{
    ViewData["Title"] = "Pozycje koszyka";
}

<h1 class="mb-4">Pozycje koszyka</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj pozycję
</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Towar</th>
            <th>Ilość</th>
            <th>Koszyk ID</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Towar?.Nazwa</td>
                <td>@item.Ilosc</td>
                <td>@item.KoszykId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-olive btn-sm me-1"><i
                            class="bi bi-pencil-square"></i> Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-slate btn-sm me-1"><i
                            class="bi bi-info-circle"></i> Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-1"><i
                            class="bi bi-trash"></i> Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
