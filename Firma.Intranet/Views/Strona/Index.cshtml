@model IEnumerable<Firma.Data.Data.CMS.Strona>
@{
    ViewData["Title"] = "Strony";
}

<h1 class="mb-4">Lista stron</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj nową stronę
</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Tytuł</th>
            <th>Treść</th>
            <th>Pozycja</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Tytul</td>
            <td>@item.Tresc?.Substring(0, Math.Min(50, item.Tresc.Length))...</td>
            <td>@item.Pozycja</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdStrony" class="btn btn-olive btn-sm me-1">
                    <i class="bi bi-pencil-square"></i> Edytuj
                </a>
                <a asp-action="Details" asp-route-id="@item.IdStrony" class="btn btn-slate btn-sm me-1">
                    <i class="bi bi-info-circle"></i> Szczegóły
                </a>
                <a asp-action="Delete" asp-route-id="@item.IdStrony" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i> Usuń
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
