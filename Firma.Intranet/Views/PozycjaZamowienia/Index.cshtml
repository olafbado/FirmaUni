@model IEnumerable<Firma.Data.Data.Sklep.PozycjaZamowienia>
@{
    ViewData["Title"] = "Pozycje zamówienia";
}

<h1 class="mb-4">Lista pozycji zamówień</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj nowe zamówienie
</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Id zamówienia</th>
            <th>Towar</th>
            <th>Ilość</th>
            <th>Cena jednostkowa</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ZamowienieId</td>
                <td>@item.Towar?.Nazwa</td>
                <td>@item.Ilosc</td>
                <td>@item.CenaJednostkowa.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-olive btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Edytuj
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
