<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Intranet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/shared.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Firma Intranet</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Strona" asp-action="Index">Strony</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Aktualnosc" asp-action="Index">Aktualności</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Rodzaj" asp-action="Index">Rodzaje</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Towar" asp-action="Index">Towary</a></li>
                </ul>
                <span class="navbar-text">Zalogowany: admin</span>
            </div>
        </div>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-5 border-top">
        <div class="container">
            <small>&copy; 2025 Firma – Intranet panel</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
