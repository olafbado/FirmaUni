@model IEnumerable<Firma.Data.Data.Sklep.Koszyk>
@{
    ViewData["Title"] = "Koszyki";
}
<h1>Lista koszyków</h1>
<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nowy koszyk
</a>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Data utworzenia</th>
            <th>Użytkownik</th>
            <th>Liczba pozycji</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataUtworzenia.ToString("g")</td>
                <td>@item.Uzytkownik?.Imie @item.Uzytkownik?.Nazwisko</td>
                <td>@item.Pozycje.Count</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdKoszyka" class="btn btn-sm btn-olive me-1">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.IdKoszyka" class="btn btn-sm btn-slate me-1">Szczegóły</a>
                    <form asp-action="Delete" asp-route-id="@item.IdKoszyka" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Na pewno usunąć?')">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
