@model IEnumerable<Firma.Data.Data.Sklep.Koszyk>
@{
    ViewData["Title"] = "Koszyki";
}

<h1 class="mb-4">Lista koszyków</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj nowy koszyk
</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Data utworzenia</th>
            <th>Użytkownik</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdKoszyka</td>
                <td>@item.DataUtworzenia.ToString("g")</td>
                <td>@item.UzytkownikId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdKoszyka" class="btn btn-olive btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Edytuj
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdKoszyka" class="btn btn-slate btn-sm me-1">
                        <i class="bi bi-info-circle"></i> Szczegóły
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdKoszyka" class="btn btn-danger btn-sm me-1">
                        <i class="bi bi-trash"></i> Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
