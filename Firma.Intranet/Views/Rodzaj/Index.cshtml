@model IEnumerable<Firma.Data.Data.Sklep.Rodzaj>
@{
    ViewData["Title"] = "Rodzaje";
}

<h1 class="mb-4">Lista rodzajów</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj nowy rodzaj
</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nazwa</td>
                <td>@item.Opis</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRodzaju" class="btn btn-olive btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Edytuj
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdRodzaju" class="btn btn-slate btn-sm me-1">
                        <i class="bi bi-info-circle"></i> Szczegóły
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.IdRodzaju" method="post" class="d-inline"
                        onsubmit="return confirm('Czy na pewno chcesz usunąć ten rodzaj?');">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Usuń
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
