@model Firma.Data.Data.Sklep.Rodzaj
@{
    ViewData["Title"] = "Dodaj nowy rodzaj";
}

<h1 class="mb-4">Dodaj nowy rodzaj</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Nazwa" class="form-label"></label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Opis" class="form-label"></label>
        <textarea asp-for="Opis" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
