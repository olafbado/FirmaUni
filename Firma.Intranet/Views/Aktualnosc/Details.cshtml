@model Firma.Data.Data.CMS.Aktualnosc
@{
    ViewData["Title"] = "Szczegóły aktualności";
}

<h1 class="mb-4">Szczegóły aktualności</h1>

<div class="mb-3">
    <strong>@Html.DisplayNameFor(m => m.LinkTytul):</strong> @Model.LinkTytul
</div>
<div class="mb-3">
    <strong>@Html.DisplayNameFor(m => m.Tytul):</strong> @Model.Tytul
</div>
<div class="mb-3">
    <strong>@Html.DisplayNameFor(m => m.Tresc):</strong>
    <div class="border rounded p-3 bg-light">@Model.Tresc</div>
</div>
<div class="mb-3">
    <strong>@Html.DisplayNameFor(m => m.Pozycja):</strong> @Model.Pozycja
</div>

<a asp-action="Edit" asp-route-id="@Model.IdAktualnosci" class="btn btn-olive me-2">
    <i class="bi bi-pencil-square"></i> Edytuj
</a>
<a asp-action="Index" class="btn btn-secondary">Wróć</a>
