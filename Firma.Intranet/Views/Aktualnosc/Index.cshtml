@model IEnumerable<Firma.Data.Data.CMS.Aktualnosc>

@{
    ViewData["Title"] = "Aktualności";
}

<h1 class="mb-4">Lista aktualności</h1>

<a asp-action="Create" class="btn btn-primary mb-3"><i class="bi bi-plus-circle"></i> Dodaj aktualność</a>

<table class="table table-hover table-bordered table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Tytuł</th>
            <th>Pozycja</th>
            <th>Link</th>
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tytul</td>
                <td>@item.Pozycja</td>
                <td>@item.LinkTytul</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAktualnosci" class="btn btn-olive btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.IdAktualnosci" class="btn btn-slate btn-sm me-1">
                        <i class="bi bi-info-circle"></i> Szczegóły</a>
                    <form asp-action="Delete" asp-route-id="@item.IdAktualnosci" method="post" class="d-inline"
                        onsubmit="return confirm('Czy na pewno chcesz usunąć tę aktualność?');">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Usuń
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
